{
  "name": "@choiceform/form",
  "version": "0.0.1",
  "description": "Form components for Choiceform Design System",
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./src/index.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@tanstack/react-form": "^1.27.1",
    "usehooks-ts": "^3.1.0",
    "@choiceform/button": "workspace:*",
    "@choiceform/checkbox": "workspace:*",
    "@choiceform/design-shared": "workspace:*",
    "@choiceform/input": "workspace:*",
    "@choiceform/label": "workspace:*",
    "@choiceform/multi-select": "workspace:*",
    "@choiceform/numeric-input": "workspace:*",
    "@choiceform/radio": "workspace:*",
    "@choiceform/range": "workspace:*",
    "@choiceform/segmented": "workspace:*",
    "@choiceform/select": "workspace:*",
    "@choiceform/switch": "workspace:*",
    "@choiceform/textarea": "workspace:*"
  },
  "devDependencies": {
    "@choiceform/code-block": "workspace:*",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-store": "^0.8.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.5.3",
    "zod": "^4.1.13",
    "@choiceform/badge": "workspace:*",
    "@choiceform/icon-button": "workspace:*",
    "@choiceform/icons-react": "^1.3.8",
    "@choiceform/link-button": "workspace:*",
    "@choiceform/tabs": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}
